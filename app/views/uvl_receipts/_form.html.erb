<%= form_for(@uvl_receipt) do |f| %>
  <% if @uvl_receipt.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@uvl_receipt.errors.count, 'error') %> non posso salvare il record corrente:</h2>
      <ul>
      <% @uvl_receipt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='row'>
    <div class='col col-lg-4'>
      <div class='field'>
        <%= f.label 'Ufficio:' %><br>
        <%= f.collection_select(:uvl_office_id, UvlOffice.order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <div class='field'>
        <%= f.label 'Nome:' %><br>
        <%= f.text_field :customer_name, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Cognome:' %><br>
        <%= f.text_field :customer_forname, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Luogo di Nascita:' %><br>
        <%= f.text_field :customer_birth_place, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Data di Nascita' %><br>
        <%= f.text_field :customer_birth_date, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Codice Fiscale:' %><br>
        <%= f.text_field :customer_fiscal_code, class: 'form-control' %>
      </div>
    </div>
    <div class='col col-lg-4'>
      <div class='field'>
        <%= f.label 'Indirizzo:' %><br>
        <%= f.text_field :customer_address, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Cap:' %><br>
        <%= f.text_field :customer_zip, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Comune:' %><br>
        <%= f.text_field :customer_city, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Provincia:' %><br>
        <%= f.text_field :customer_province, class: 'form-control' %>
      </div>
    </div>
    <div class='col col-lg-4'>
      <div class='field'>
        <%= f.label 'Ammontare:' %><br>
        <%= f.text_field :payment, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Tipologia Pagamento:' %><br>
        <%= f.collection_select(:payment_typology_id, PaymentTypology.order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <div class='field'>
        <%= f.label 'Tipologia Pratica:' %><br>
        <%= f.collection_select(:practise_typology_id, PractiseTypology.order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <div class='field'>
        <%= f.label 'Azienda:' %><br>
        <%= f.text_field :company, class: 'form-control' %>
      </div>
      <div class='field'>
        <%= f.label 'Avvocato:' %><br>
        <%= f.collection_select(:lawyer_id, Lawyer.order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <div class='field'>
        <%= f.label 'Categoria:' %><br>
        <%= f.collection_select(:category_id, Category.order('position ASC'), :id, :name, {:include_blank => true}, {:class => 'form-control'}) %>
      </div>
      <div class='field'>
        <%= f.label 'Note:' %><br>
        <%= f.text_area :note %>
      </div>
    </div>
  </div>
  <hr id='hr-grey'>
  <div class='row'>
    <div class='col col-lg-4'>
      <div class='form-group'>
        <%= button_tag(type: 'submit', class: 'btn btn-success btn-sm') do %>
        <%= fa_icon('save') %>&nbsp;Salva
        <% end %>
      </div>
    </div>
  </div>
<% end %>
